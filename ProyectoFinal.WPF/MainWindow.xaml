<Window x:Class="ProyectoFinal.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Acceso al Sistema" Height="400" Width="350" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#F5F5F5">

    <Border CornerRadius="10" Background="White" Margin="20" Padding="20">
        <Border.Effect>
            <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
        </Border.Effect>

        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="🚗 GESTIÓN DE COCHES" FontSize="18" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Center" Margin="0,0,0,30"/>

            <TextBlock Text="Usuario:" Foreground="#666" Margin="0,0,0,5"/>
            <TextBox x:Name="txtUsuario" Height="30" Padding="5" BorderBrush="#CCC" Text="admin"/>

            <TextBlock Text="Contraseña:" Foreground="#666" Margin="0,15,0,5"/>
            <PasswordBox x:Name="txtPass" Height="30" Padding="5" BorderBrush="#CCC"/>

            <Button Content="INICIAR SESIÓN" Height="40" Margin="0,30,0,0" 
                    Background="#007ACC" Foreground="White" FontWeight="Bold" 
                    Cursor="Hand" BorderThickness="0" Click="Button_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <TextBlock x:Name="lblError" Foreground="Red" HorizontalAlignment="Center" Margin="0,15,0,0" TextWrapping="Wrap" TextAlignment="Center"/>
        </StackPanel>
    </Border>
</Window>